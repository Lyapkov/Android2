<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_padding"
    tools:backgroundTint="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:layout_marginEnd="@dimen/text_padding"
            tools:text="@string/heading_text"/>

        <TextView
            android:id="@+id/body"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_padding"
            android:layout_marginTop="@dimen/text_padding"
            android:layout_marginEnd="@dimen/text_padding"
            tools:text="Заголовок" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_padding"
            android:textSize="@dimen/text_button_size"
            style="@style/TextAppearance.AppCompat.Button"
            android:text="@string/button_delete_text" />

    </LinearLayout>

</androidx.cardview.widget.CardView>